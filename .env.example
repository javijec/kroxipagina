# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Authentication
# Comma-separated list of admin email addresses (can edit anywhere)
ADMIN_EMAILS=admin@example.com,owner@example.com

# Comma-separated list of editor email addresses (can edit pages)
ALLOWED_EDITORS=editor@example.com,content@example.com

# Public configuration (accessible on client side)
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,owner@example.com
NEXT_PUBLIC_ALLOWED_EDITORS=editor@example.com,content@example.com

# Security
# Comma-separated list of allowed origins for authentication
TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Application
NODE_ENV=development
